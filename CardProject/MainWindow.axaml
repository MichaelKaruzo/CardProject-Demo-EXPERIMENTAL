<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CardProject.MainWindow"
        Title="CardProject" Width="400" Height="300">
	<StackPanel Margin="20">
		<TextBlock Text="Card Games Demo" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>

		<StackPanel x:Name="LoginPanel">
			<TextBlock Text="Username:" Margin="0,5"/>
			<TextBox x:Name="UserNameTextBox" Margin="0,5"/>
			<TextBlock Text="Password: " Margin="0,5"/>
			<TextBox x:Name="PasswordTextBox" Margin="0,5"/>

			<Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,10"/>
			<Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Center" Margin="0,10"/>
		</StackPanel>

		<StackPanel x:Name="GameSelectionPanel" Margin="0,20,0,0">
			<TextBlock Text="Select a Game: " Margin="0,20,0,0"/>
			<Button x:Name="WhiteJackButton" Content="WhiteJack" Margin="0,5" HorizontalAlignment="Stretch"/>
			<Button x:Name="WarButton" Content="War" Margin="0,5" HorizontalAlignment="Stretch"/>
			<Button x:Name="PokerButton" Content="Poker" Margin="0,5" HorizontalAlignment="Stretch"/>
			<Button x:Name="HistoryButton" Content="History" Margin="0,5" HorizontalAlignment="Stretch"/>

		</StackPanel>
		
	</StackPanel>
    
</Window>
